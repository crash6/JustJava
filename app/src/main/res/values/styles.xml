<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for the main layout -->
    <style name="mainLayoutAppearance" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/main_layout_padding</item>
        <item name="android:paddingRight">@dimen/main_layout_padding</item>
    </style>

    <!-- Style for the nested layout -->
    <style name="nestedLayoutAppearance" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!-- Parent style for the quantity picker buttons -->
    <style name="quantityPickerAppearance" parent="AppTheme">
        <item name="android:layout_width">@dimen/quantity_picker_width</item>
        <item name="android:layout_height">@dimen/quantity_picker_height</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style for the labels on the screen -->
    <style name="labelAppearance" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/label_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/label_margin_bottom</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/label_font_size</item>

    </style>

    <!-- Style for the text fields on the screen -->
    <style name="fieldAppearance" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/field_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Specific style for the quantity text field -->
    <style name="quantityFieldAppearance" parent="fieldAppearance">
        <item name="android:layout_marginLeft">@dimen/quantity_margin_left</item>
        <item name="android:layout_marginRight">@dimen/quantity_margin_right</item>
    </style>

    <!-- Style for the order button -->
    <style name="orderButtonAppearance" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
    </style>

    <!-- Style applied the checkboxes shown on the screen -->
    <style name="checkBoxAppearance" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/check_box_font_size</item>
        <item name="android:paddingLeft">@dimen/check_box_padding_left</item>
    </style>




</resources>
